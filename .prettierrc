{
  "semi": true,
  "useTabs": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "arrowParens": "always",
  "overrides": [
    {
      "files": [
        "constants.js",
        "permissions.js",
        "messages.js",
        "app/containers/App/index.js",
        "app/config/routes/index.js",
        "app/config/environment/*",
        "*Router.js"
      ],
      "options": {
        "printWidth": 150
      }
    }
  ]
}
